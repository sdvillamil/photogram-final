
<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>

<hr>
<% if @current_user == nil%>
<%else%>

<div>
  <div>
    <h2>      
      Add Photo 
    </h2>
   
    <form action="/insert_photo" method="post">
            
        <label for="image_box">
          Image
        </label>

        <input type="file" id="image_box" name="query_image">
        <input type = "hidden" value="<%= @current_user.id %>" name= "query_owner_id">
                
        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="3"></textarea>
                
      <button>
        Add photo
      </button>
    </form>
  </div>
</div>
<% end %>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>    
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>
        <td>
          <%= a_photo.id %>
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.image %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_photo.updated_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
