<div>
  <div>
    <h1>
      Photo details
    </h1>
    <div>
      <div>
        <a href="/photos">Go back</a>
      </div>

      <div>
        <a href="/delete_photo/<%= @the_photo.id %>">Delete photo</a>
      </div>
    </div>

    <dl>

      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>
      <dt>
        Image
      </dt>
      <dd>
        <%= @the_photo.image %>
      </dd>
      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      
      <dd>
        <%= time_ago_in_words(@the_photo.updated_at) %> ago
      </dd>
    
    </dl>
  
  </div>

</div>

<hr>

<div>
  <div>
    <h2>Edit photo</h2>

    <form action="/modify_photo/<%= @the_photo.id %>"  method="post" >
      <div>
        <label for="cap_box">
          Caption
        </label>

        <textarea id="cap_box" name="query_caption"><%= @the_photo.caption %></textarea>
      </div>

      <div>
        <label for="img_box">
          Image
        </label>

        <input type="text" id="img_box" name="query_image" value="<%= @the_photo.image %>">
      </div>

      <button>
        Update photo
      </button>

    </form>
  </div>

</div>

<hr>
